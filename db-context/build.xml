<project name="db" default="dbinst" basedir=".">
  <target name="dbinst">
    <exec executable="java.exe">
      <arg line="-jar ../../DerbyRun.jar ij createdb.sql" />
    </exec>
  </target>
  <target name="start-db">
    <exec executable="java.exe">
      <arg line="-jar ../../DerbyRun.jar start" />
    </exec>
  </target>
  <target name="stop-db">
    <exec executable="java.exe">
      <arg line="-jar ../../DerbyRun.jar stop" />
    </exec>
  </target>
</project>    
